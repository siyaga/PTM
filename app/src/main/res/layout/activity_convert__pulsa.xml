<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Convert_Pulsa">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:background="#673AB7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/tv_pulse"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulse Changer"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.cardview.widget.CardView
            android:backgroundTint="#673AB7"
            android:layout_width="match_parent"
            android:layout_height="250dp">


            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_back"
                    android:layout_width="25sp"
                    android:layout_height="25sp"/>
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Cari Provider"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:layout_width="300dp"
                    android:layout_height="50dp"/>

            </RelativeLayout>




        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/rg_pulsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_telkomsel"
                        android:textSize="20dp"
                        android:text="Telkomsel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:text="(Rate 0.75)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_xl"
                            android:textSize="20dp"
                            android:text="XL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:text="(Rate 0.5)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_indosat"
                            android:textSize="20dp"
                            android:text="Indosat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:text="(Rate 0.5)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_tri"
                            android:textSize="20dp"
                            android:text="Tri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:text="(Rate 0.4)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_marginTop="50dp"
                    android:text="Kirim Pulsa Senilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_nilai_pulsa"
                    android:hint="Masukan Jumlah Pulsa"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/ic_provider"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/black"
                    android:text="Akan Ditransfer ke Rekening Anda Senilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_hasil"
                    android:layout_marginTop="10dp"
                    android:textColor="#673AB7"
                    android:text="Rp. 51.750"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_hitung"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="#673AB7"
                    android:textStyle="normal"
                    android:text="Hitung"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_komfirmasi"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="#673AB7"
                    android:textStyle="normal"
                    android:text="Lanjut"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




        </ScrollView>
    </LinearLayout>



</RelativeLayout>