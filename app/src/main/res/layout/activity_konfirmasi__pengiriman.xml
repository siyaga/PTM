<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Konfirmasi_Pengiriman">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:background="#673AB7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/tv_pulse"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulse Changer"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.cardview.widget.CardView
            android:backgroundTint="#673AB7"
            android:layout_width="match_parent"
            android:layout_height="250dp">


            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_back"
                    android:layout_width="25sp"
                    android:layout_height="25sp"/>
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Kirim Pulsa Ke Nomor Berikut"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:text="085 1122 3411"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>




        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
         android:padding="10dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_marginTop="50dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_kirim_pulsa_senilai"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:text="Kirim Pulsa Senilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_kirim_pulsa_senilai"
                android:textColor="#673AB7"
                android:textSize="30dp"
                android:text="Rp. 69.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
          </RelativeLayout>
            <TextView
                android:layout_marginTop="50dp"
                android:textColor="@android:color/black"
                android:text="Komfirmasi Pengiriman Pulsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="20dp"
                android:hint="Isi Nomor Handphone / MKIOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="30dp"
                android:text="Transfer ke Rekening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout

                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_BNI"
                android:src="@drawable/ic_bank"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_bank"
                android:text="BNI"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_BNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_bank_harga"
                    android:text="Rp 51.750"
                    android:textSize="16dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#673AB7"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_bank"
                android:text="08155491861285"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_BNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_waktu_kirim_pulsa"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Silakan Kirim Pulsa Sebelum"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="5:02:30"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_waktu_kirim_pulsa"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_proses"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="#673AB7"
                android:textStyle="normal"
                android:text="proses"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>